<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="tests/bootstrap.php"
    backupGlobals="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
>
    <!-- Tell PHPUnit where test files are -->
    <testsuites>
        <testsuite name="WordPress Theme Tests">
            <directory>tests/</directory>
        </testsuite>
    </testsuites>

    <!-- Code coverage report -->
    <coverage>
        <include>
            <directory>wp-content/themes/yuvaraj-theme/</directory>
        </include>
    </coverage>

    <!-- Environment variables for testing -->
    <php>
        <env name="WP_TESTS_DB_NAME"     value="wp_test_db"/>
        <env name="WP_TESTS_DB_USER"     value="wpuser"/>
        <env name="WP_TESTS_DB_PASSWORD" value="wppass123"/>
        <env name="WP_TESTS_DB_HOST"     value="127.0.0.1"/>
    </php>
</phpunit>
