<?xml version="1.0"?>
<ruleset name="Yuvaraj Theme">
    <description>WordPress Coding Standards for Yuvaraj Theme</description>

    <!-- Files to check -->
    <file>wp-content/themes/yuvaraj-theme/</file>
    <arg name="extensions" value="php"/>

    <!-- Use WordPress standard -->
    <rule ref="WordPress">
        <!-- Exclude prefix requirement â€” our functions already use yuvaraj_ prefix -->
        <exclude name="WordPress.NamingConventions.PrefixAllGlobals"/>
        <!-- Exclude file header comment requirement for theme files -->
        <exclude name="Squiz.Commenting.FileComment.MissingPackageTag"/>
    </rule>

</ruleset>
