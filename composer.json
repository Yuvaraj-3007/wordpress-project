{
    "name": "yuvaraj/wordpress-project",
    "description": "WordPress Project with CI/CD Pipeline",
    "author": "Yuvaraj Pandian",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "wp-phpunit/wp-phpunit": "^6.4",
        "squizlabs/php_codesniffer": "^3.0",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "lint": "phpcs --standard=WordPress wp-content/themes/yuvaraj-theme/"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
